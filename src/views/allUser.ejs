<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/assets/css/base.css">
    <link rel="stylesheet" href="/assets/css/list.css">
</head>

<body>
    
    <h2>Danh sách user</h2>
    <div class="table-wrapper">
        <div class="searchUser">
            <form method="post">
                <input type="text" name="keywordName" placeholder="name">
                <button type="submit">tìm</button>
            </form>
        </div>
        <table class="fl-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Full name</th>
                    <th>Debt</th>
                    <th>Tel</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < dataUser.length; i++) { %>
                    <tr>
                        <td>
                            <%= dataUser[i].id %>
                        </td>
                        <td>
                            <%= dataUser[i].fullName %>
                        </td>
                        <td>
                            <%= dataUser[i].inDebt %>
                        </td>
                        <td>
                            <%= dataUser[i].tel %>
                        </td>
                        <td>
                            <%= dataUser[i].addr %>
                        </td>
    
                        <td>
                            <a href="/detail/user/<%= dataUser[i].id%>">Detail</a>
                            <form action="edit-user/<%= dataUser[i].id%>"><button type="submit">Edit</button></form>
                            <form action="delete-user" method="post">
                                <input type="text" name="id" hidden value="<%= dataUser[i].id%>">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>