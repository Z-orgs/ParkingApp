<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/app.css">
</head>

<body>
    <div class="searchVehicle">
        <form method="post">
            <input type="text" name="keywordLicense" placeholder="license">
            <button type="submit">tìm</button>
        </form>
    </div>
    <h2>Danh sách phương tiện</h2>
    <table>
        <tr>
            <th>ID(Vehicle)</th>
            <th>License</th>
            <th>Type</th>
            <th>Owner by ID</th>
            <th>Actions</th>
        </tr>
        <% for(var i=0; i < dataVehicle.length; i++) { %>
            <tr>
                <td>
                    <%= dataVehicle[i].idV %>
                </td>
                <td>
                    <%= dataVehicle[i].license %>
                </td>
                <td>
                    <%= dataVehicle[i].type %>
                </td>
                <td>
                    <%= dataVehicle[i].id %>
                </td>
                <td>
                    <a href="/detail/vehicle/<%= dataVehicle[i].idV%>">Detail</a>
                    <form action="edit-vehicle/<%= dataVehicle[i].idV%>"><button type="submit">Edit</button></form>
                    <form action="delete-vehicle" method="post">
                        <input type="text" name="idV" hidden value="<%= dataVehicle[i].idV%>">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>