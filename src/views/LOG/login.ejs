<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/base.css">
    <link rel="stylesheet" href="./assets/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="icon" href="/assets/images/logo.ico">
    <script>
        if(window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
    </script>
</head>

<body>
    <div class="login-page">
        <div class="wrapper wrapper-login">
            <ul class="bg-bubbles">
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
            </ul>
        </div>
        <div class="form-container login-container">
            <div class="form-container-l">
                <img src="/assets/images/login.png" alt="" class="form-illustration">
            </div>
            <div class="form-container-r">
                <div>
                    <a href="/" class="back-to-home">
                        <i class="fa-solid fa-angle-left back-to-home__icon"></i>
                        Home
                    </a>
                    <div class="form-block">
                        <div class="form-header">
                            <p class="form-header__msg">Already members</p>
                            <a class="form-header__link" href="/register">
                                <i class="fa-solid fa-user-plus"></i>
                                Register
                            </a>
                        </div>
                        <form class="lr-form" id="login-form" action="authLOG" method="POST">
                            <div class="form-group">
                                <input type="text" id="user-name" class="form-control" name="username"
                                    placeholder="Username" rules="required|user_name">
                                <label for="user-name" class="error-msg"></label>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="password" name="password"
                                    placeholder="Password" rules="required|min:8">
                                <label for="password" class="error-msg"></label>
                            </div>
                            <input class="btn login-btn" type="submit" value="Sign in">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="assets/js/validation.js"></script>
    <script type="text/javascript">
        Validator('#login-form');
        showAlert = function (err) {
            alert('Server: ' + err);
        };
        var error = "<%= message.mess %>";
        if(error !== "") {
            showAlert(error);
        }
    </script>
</body>

</html>